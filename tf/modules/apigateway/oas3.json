{
  "openapi": "3.0.1",
  "info": {
    "title": "exampleapi",
    "description": "Example API",
    "version": "0.1.7"
  },

  "paths": {

    "/lambda": {
      "post": {


        "x-amazon-apigateway-integration": {

	  "uri": "arn:aws:apigateway:${region}:lambda:path/2015-03-31/functions/${lambda_identity_arn}/invocations",

          "httpMethod": "POST",
          "responses": {
            "default": {
              "statusCode": "200"
            }
          },
          "passthroughBehavior": "when_no_match",
          "type": "aws_proxy"
        }
      }
    },

    "/echo": {
      "get": {
        "x-amazon-apigateway-integration": {
          "uri": "${echoUri}",
          "httpMethod": "GET",
          "responses": {
            "default": {
              "statusCode": "200"
            }
          },
          "passthroughBehavior": "when_no_match",
          "type": "http_proxy"
        }
      },

      "post": {
        "x-amazon-apigateway-integration": {
          "uri": "${echoUri}",
          "httpMethod": "POST",
          "responses": {
            "default": {
              "statusCode": "200"
            }
          },
          "passthroughBehavior": "when_no_match",
          "type": "http_proxy"
        }
      }

    }
  }
}
